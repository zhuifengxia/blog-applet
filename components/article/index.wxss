@import "../../css/font-awesome.wxss";

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: center;
    background-color: white;
    padding: 20rpx;
    margin-top: 20rpx;
}

.art-title {
    margin-bottom: 10rpx;
}

.art-img {
    width: 94%;
    border-radius: 10rpx;
    height: 300rpx;
}

.sub-container {
    display: flex;
    flex-direction: row-reverse;
    margin-right: 30rpx;
    margin-top: 10rpx;
}

.arttimediv {
    font-size: 12px;
    color: #b2b2b2;
    margin-right: 10px;
}