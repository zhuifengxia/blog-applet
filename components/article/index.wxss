.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: center;
    background-color: white;
    padding: 20rpx;
    margin-top: 20rpx;
}

.art-title {
    margin-bottom: 10rpx;
}

.art-img {
    width: 94%;
    border-radius: 10rpx;
    height: 300rpx;
}

.sub-container {
    display: flex;
    flex-direction: row-reverse;
    margin-right: 30rpx;
    margin-top: 10rpx;
}

.arttimediv {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 10px;
}
.text{
    margin-left:10rpx;
    color: #d2d2d2;
}