.container {
    background-color: white;
}

.tab-h {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #1b1c21;
    font-size: 14px;
    white-space: nowrap;
    position: fixed;
    color: #8b8b8b;
    top: 0;
    left: 0;
    z-index: 99;
}

.tab-item {
    margin: 0 36rpx;
    display: inline-block;
}

.tab-item.active {
    color: white;
    position: relative;
}

.tab-item.active:after {
    content: "";
    display: block;
    height: 8rpx;
    width: 100rpx;
    background: white;
    position: absolute;
    bottom: 0;
    left: 4rpx;
    border-radius: 16rpx;
}

.item-ans {
    width: 100%;
    display: flex;
    flex-grow: row no-wrap;
    justify-content: space-between;
    padding: 0 30rpx;
    box-sizing: border-box;
    height: 150rpx;
    align-items: center;
    border-bottom: 5px solid #F2F2F2;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    position: relative;
    padding-right: 30rpx;
}

.avatar .img {
    width: 100%;
    height: 100%;
}

.avatar .doyen {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: -2px;
    right: 20rpx;
}

.expertInfo {
    font-size: 12px;
    flex-grow: 2;
    color: #B0B0B0;
    line-height: 1.5em;
    text-align: left;
}

.expertInfo .name {
    font-size: 16px;
    color: #000;
    margin-bottom: 6px;
    text-align: left;
}

.tab-content {
    margin-top: 80rpx;
}

.scoll-h {
    height: 100%;
}

button::after {
    border: none;
}

button {
    background-color: #fff;
}